{
    "extends": [
      "config:base"
    ],
    "packageRules": [
      {
        "matchUpdateTypes": ["minor", "patch", "pin", "digest"],
        "automerge": true
      },
      {
        "matchUpdateTypes": ["major"],
        "automerge": false
      }
    ],
    "timezone": "Asia/Kolkata",
    "schedule": [
      "after 10pm every weekday",
      "before 5am every weekday",
      "every weekend"
    ]
  }